<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Edit event information</h3>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <%= form_for(@event, remote: true) do |f| %>
    <div class="box-body">
      <div class="form-group has-feedback">
        <%= f.text_field :name, autofocus: true,class: "form-control", placeholder: "Event name" %>
        <span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.select(:category_id, @categories.all.collect {|p| [ p.name, p.id ]}, class: "form-control select2 full-width")  %>
      </div>

      <div class="form-group has-feedback">
        <%= f.text_field :address, class: "form-control", placeholder: "Address" %>
        <span class="glyphicon glyphicon-map-marker form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.text_field :mobile, class: "form-control", placeholder: "Phone number" %>
        <span class="glyphicon glyphicon-alt-phone form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.text_area(:description, size: '10x3',class: "form-control", placeholder: "What is this event about?") %>
        <span class="glyphicon glyphicon-pencil form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.time_field :start, class: "form-control", placeholder: "Starting time" %>
        <span class="glyphicon glyphicon-alt-phone form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.file_field :image %>
        <span class="glyphicon glyphicon-picture form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.date_field :from,class: "form-control", placeholder: "From" %>
        <span class="glyphicon glyphicon-th form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.text_field :to,class: "form-control", placeholder: "To" %>
        <span class="glyphicon glyphicon-th form-control-feedback"></span>
      </div>

    <div class="box-footer">
      <%= f.submit "Update data", class: "btn btn-info btn-block btn-flat" %>
    </div>
  <% end %>
</div>
