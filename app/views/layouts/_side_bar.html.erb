<!-- sidebar: style can be found in sidebar.less -->
      <section class="sidebar">

        <!-- Sidebar user panel (optional) -->
        <div class="user-panel">
          <div class="pull-left image">
            <%= image_tag("user2-160x160.jpg") %>
          </div>
          <div class="pull-left info">
            <p><%= @user.first_name %></p>
            <!-- Status -->
            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
          </div>
        </div>

        <!-- search form (Optional) -->

          <div class="sidebar-form">
            <%= search_form_for @q, url: search_events_path,remote: true, method: :put  do |f| %>
              <div class="input-group">
                <%= f.text_field :address, class: "form-control geo-input", placeholder: "Search..."%>
                <span class="input-group-btn">
                  <%= button_tag type: 'submit', class: "btn btn-flat" do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
        <!-- /.search form -->

        <!-- Sidebar Menu -->
        <ul class="sidebar-menu" data-widget="tree">
          <li class="header">EVENTS</li>
          <!-- Optionally, you can add icons to the links -->
          <!-- <li class="active"><a href="#"><i class="fa fa-link"></i> <span>Link</span></a></li>
          <li><a href="#"><i class="fa fa-link"></i> <span>Another Link</span></a></li> -->
          <li class="treeview">
            <a href="#"><i class="fa fa-link"></i> <span>Categories</span>
              <span class="pull-right-container">
                  <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
              <li><%= link_to "all", category_events_path(category_id: '0'), remote: true%></li>
              <li><%= link_to "Music", category_events_path(category_id: '1'), remote: true%></li>
              <li><%= link_to "Dance",category_events_path(category_id: '2'), remote: true%></li>
              <li><%= link_to "Stunt",category_events_path(category_id: '3'), remote: true%></li>
              <li><%= link_to "medical",category_events_path(category_id: '4'), remote: true %></li>
              <li><%= link_to "Other",category_events_path(category_id: '5'), remote: true%></li>
            </ul>
          </li>
        </ul>
        <!-- /.sidebar-menu -->
      </section>
      <!-- /.sidebar -->
